<ul class="navbar-nav">
@if (User.Identity.IsAuthenticated)
{
    <li class="nav-item">
        @if (User.IsInRole("admin"))
        {
            <a id="manage" class="nav-link text-dark" href="/ChangePassword" title="Manage">Hello @User.Identity.Name (admin)!</a>
        }
        @if (User.IsInRole("superadmin"))
        {
            <a id="manage" class="nav-link text-dark" href="/ChangePassword" title="Manage">Hello @User.Identity.Name (superadmin)!</a>
        }
    </li>
    <li class="nav-item">
        <form method="post" asp-controller="Auth" asp-action="Logout">
            <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" id="login" asp-controller="Auth" asp-action="Login">Login</a>
    </li>
}
</ul>
